{% extends "base.html.twig" %}

{% block title %}Create content{% endblock %}

{% block body %}
<div class="container mt-2">

    {% include 'includes/heading.html.twig' with {'title': 'Add new content'}  %}

        {{ form_start(form_create, {'attr': {'class': 'container'}}) }}

        <div class="row">
            <div class="col form-group col-md-1">
                {{ form_label(form_create.active) }}
                {{ form_widget(form_create.active) }}
            </div>
            <div class="col form-group col-md-1">
                {{ form_label(form_create.position) }}
                {{ form_widget(form_create.position, {
                    'attr': {
                        'class': 'form-control',
                        'id': 'Position',
                        'min': 1,
                        'max': max,
                        'value': max
                    }
                }) }}
            </div>
            <div class="col form-group col-md-4">
                {{ form_label(form_create.title) }}
                {{ form_widget(form_create.title, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="col form-group col-md-4">
                {{ form_label(form_create.label) }}
                {{ form_widget(form_create.label, { 'attr': { 'class': 'form-control' } }) }}
            </div>

            <div class="col form-group col-md-2">
                {{ form_label(form_create.parentId) }}
                {{ form_widget(form_create.parentId, { 'attr': { 'class': 'form-control' } }) }}
            </div>
        </div>

        <div class="row">
            <div class="col form-group col-md-12">
                {{ form_label(form_create.content) }}
                {{ form_widget(form_create.content, { 'attr': { 'class': 'form-control', 'rows': 12 } }) }}
            </div>
        </div>

        <div class="row">
            {% include 'includes/form_buttons.html.twig' with { 'path': path('app_main') } %}
        </div>


        {{ form_end(form_create) }}

</div>
{% endblock %}