<div class="row justify-content-around">

    <div class="col col-md-6">
        <h3>
            {% if constant('App\\Constants::TESTING') %}
            <span style="font-size:14px"><i class="fa-solid fa-wrench"></i></span>
            {% endif %}

            {{ title }}

            {% if title == constant('App\\Constants::PAGE_MAIN') %}
                <a href="{{ path('section_create') }}" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-box"></i>
                </a>
            {% endif %}
        </h3>
        {% for message in app.flashes('form_success') %}
            <small><span class="badge bg-success">{{ message }}</span></small>
        {% endfor %}
        {% for message in app.flashes('form_fail') %}
            <small><span class="badge bg-danger">{{ message }}</span></small>
        {% endfor %}
    </div>

</div>